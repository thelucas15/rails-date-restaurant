
<div class="container">

  <%= simple_form_for :search, url: "/restaurants", method: "get" do |f| %>
     <div class="form-inputs form-inline">
      <%= f.input :date, placeholder: "Date", label:"Date", required: true, as: :date %>
      <%= f.input :start_time, placeholder: "Time", label:"Time", required: true, as: :time %>
      <%= f.input :food_type, collection: ["Mexican", "French", "Japanese", "Italian"], label: "Choose food type", required: true %>
    </div>
  <div><%= f.submit 'GO!', class: "btn btn-primary btn-lg" %></div>
  <% end %>
</div>
<div class="container">
  <div class="row">

    <form action="/results" method="get" class="form-inline" name="search">
          <input type="text" class="form-control margin-xs" name="city" value="<%=params[:city]%>" placeholder="Lisbon">

          <input type="text" class="form-control margin-xs" name="gender" value="<%=params[:gender]%>" placeholder="male">

          <input type="text" class="form-control margin-xs" name="age" value="<%=params[:age]%>" placeholder="23">

          <div class="input-group date">
              <input type="text" class="form-control" value="<%=params[:date]%>" name="date" id='Datetimepicker'>
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-th"></span>
              </div>
              <%= content_for(:after_js) do %>
              <script type="text/javascript">
                  $(function () {
                      $('#Datetimepicker').datetimepicker();
                  });
              </script>
              <% end %>
          </div>

          <input type="submit" value="Search" class="btn btn-primary">
    </form>

  </div>
</div>
