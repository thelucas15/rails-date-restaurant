<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
    <form action="/restaurants" method="get" class="form-inline" name="Go!">

          <div class="input-group date form_datetime" id='datepicker'>
              <input type="text" class="form-control" value="<%= @date %>" name="date" placeholder="25/05/2017" autocomplete="off">
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </div>
          </div>
          <div class="input-group date form_datetime" id="timepicker">
          <input type="text" class="form-control margin-xs" name="start_time"  value="<%= @start_time %>" placeholder="20:30" autocomplete="off" >
          <div class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </div>
          </div>

          <select name="food_type" class="form-control">
            <option type="text" value="italian">Italian</option>
            <option type="text" value="mexican">Mexican</option>
            <option type="text" value="japanese">Japanese</option>
            <option type="text" value="french">French</option>
          </select>
          <br>
          <input id="ex17a" type="text" name="range"/>
          <!-- <input type="range" name="geolocation" id="points" value="50" min="18" max="120" data-popup-enabled="true">

 -->
          <br>
          <input type="submit" value="Go!" class="btn btn-primary">
    </form>
  </div>
</div>
</div>
<%= content_for(:after_js) do %>
              <script type="text/javascript">
                  $(function () {
                        $('#datepicker').datetimepicker({
                          format: 'DD/MM/YYYY',
                          });
                        $('#timepicker').datetimepicker({
                          format: 'LT',
                          });
                        });

                    $("#ex17a").slider({
                        min: 1,
                        max: 10,
                        value: 1,
                        tooltip_position:'bottom'
                      });
                      </script>
              <% end %>


