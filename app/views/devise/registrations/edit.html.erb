
<div class="container">

  <h2>Edit <%= User %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :username, autocomplete: "on", placeholder: "Forest1", label:"User name", required: true %>
      <%= f.input :first_name, autocomplete: "on", placeholder: "Tom", required: true %>
      <%= f.input :last_name, autocomplete: "on", placeholder: "Hanks", required: true %>

      <%= f.input :age, as: :slider, min: 18, max: 120, required: true %>
      <%= f.input :age_pref_start, as: :slider, min: 18, max: 120, step: 1,
                     range: true, ticks: [0, 5, 10]%>

      <%= f.input :gender_pref, as: :selectize, collection: ["Female", "Male", "Both"], label: "Gender preferences", required: true %>
      <%= f.input :hash_tag_pref, autocomplete: "off", placeholder: "#funnyperson", label: "Hash tag which describe you", required: true %>
      <%= f.input :description, autocomplete: "off", placeholder: "I'm looking for nice person to talk.", label: "Describe you in few words (max 140 characters)", required: true, :max => 140, :min => 10 %>
      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-success" %>
      </div>

  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>

